<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hansol_Chemical_NFC.Views.ItemDetailPage"
             Title="{Binding Title}">

    
    <StackLayout Spacing="20" Padding="20">
        <Label Text="결제명 :" FontSize="Medium" />
        <Label Text="{Binding ApprovalName}" FontSize="Small"/>
        <Label Text="요청자:" FontSize="Medium" />
        <Label Text="{Binding Requester}" FontSize="Small"/>
        <Label Text="결제종류 :" FontSize="Medium" />
        <Label Text="{Binding Type}" FontSize="Small"/>
        <Label Text="내용 :" FontSize="Medium" />
        <Label Text="{Binding Summary}" FontSize="Small"/>
        <Label Text="첨부자료 :" FontSize="Medium" />
        <Label Text="{Binding Attach}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>